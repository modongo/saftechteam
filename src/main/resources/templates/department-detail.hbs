{{#partial "content"}}
    <div class="jumbotron">
    <h1>Welcome to {{department.name}} Department</h1>
    <hr class="mt-2 mb-5">
    <p>Here are all the sections in this Department:</p>
    <ul>
        {{#each section}}
            <li>
                <p><a href="/departments/{{department.id}}/sections/{{department.id}}">{{description}}</a></p>
            </li>
        {{/each}}
    </ul>
    <a href="/departments/{{department.id}}/edit">Edit this Department</a><br>
    <a href="/departments/{{department.id}}/delete">DELETE this Department</a>
    </div>
{{/partial}}

{{> layout.hbs}}