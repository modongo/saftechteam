
{{#partial "header"}}Welcome to {{department.name}} Department{{/partial}}


<hr class="mt-2 mb-5">
    {{#partial "content"}}
    <p>Here are all the sections in this Department:</p>

    <ul  class="list-group">
        {{#if sections}}
        {{#each sections}}
            <li name="/sections/{{id}}" class="list-group-item list-group-item-success">
                <a href="/departments/{{department.id}}/sections/{{department.id}}">{{description}}</a>
            </li>
        {{/each}}
        {{else}}
            <p>No section</p>
        {{/if}}
    </ul>
    <a href="/departments/{{department.id}}/edit">Edit this Department</a><br>
    <a href="/departments/{{department.id}}/delete">DELETE this Department</a>
{{/partial}}

{{> layout.hbs}}