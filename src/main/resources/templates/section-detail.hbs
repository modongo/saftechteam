{{#partial "content"}}

    <p>Description:</p>

    <p>{{ section.description }}</p>
    <h5>Section setup date</h5>
    <p> {{ section.createdAt }}</p>
    <h5>Section  status:</h5>
    <p>
        {{#if section.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}

        <a href="/sections/{{section.id}}/update">Edit Section info</a><br>
        <a href="/sections/{{section.id}}/delete">DELETE this section info (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}