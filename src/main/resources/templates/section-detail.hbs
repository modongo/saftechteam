{{#partial "content"}}

    <p>Description:</p>

    <p>{{ task.description }}</p>
    <h5>Employment date</h5>
    <p> {{ task.createdAt }}</p>
    <h5>Employee status:</h5>
    <p>
        {{#if task.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}

        <a href="/tasks/{{task.id}}/update">Edit employee info</a><br>
        <a href="/tasks/{{task.id}}/delete">DELETE this employee info (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}