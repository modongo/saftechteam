{{#partial "content"}}

    {{#if editSection}}
        <h1>Edit this Section!</h1>
        <form action="/sections/{{section.id}}" method="post">
            <br>
            <label for="description">Edit this section's detail</label>
            <input id="description" name="description" type="text" value="{{section.description}}">
            <br>
            <label for="sectionId">Update this task's category:</label>
            <select id="sectionId" name="sectionId">
                {{#each departments}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right department?<a href="/departments/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h2>Add a new Section!</h2>

    <form action="/sections" method="post">
        {{#if departments}}
            <label for="description">New Section name</label>
            <input id="description" name="description" type="text">
            <label for="departmentId">Enter the department:</label>

            <select id="departmentId" name="departmentId" >
                {{#each departments}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select></br></br>
        {{else}}
        {{/if}}
        <button type="submit" class="btn btn-default">Submit!</button>
    </form>

    {{/if}}
{{/partial}}


