{{#partial "content"}}


    <form action="/sections" method="post">
        {{#if departments}}
            <label for="description">New Section name</label>
            <input id="description" name="description" type="text">
            <label for="name">Select the department:</label>
            <select id="name" name="name">
                {{#each departments}}
                    <option value="/departments/{{name}}">{{name}}</option>
                {{/each}}
            </select>

            <p>Don't see the right Department?<a href="/departments/new">Add a new Department first.</a></p>
        {{else}}
            <h3> You'll need to add a department before you add a Staff. <a href="/departments/new">Add one here.</a> </h3>
        {{/if}}
        <button type="submit" class="btn btn-default">Submit!</button>
    </form>


{{/partial}}


{{> layout.hbs}}