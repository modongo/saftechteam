{{#partial "content"}}
    {{#if editStaff}}

        <div class="container">
            <h1>edit this Staff details</h1>
            <form action="/staff/{{staff.id}}" class="needs-validation" novalidate method="post">
                <div class="form-group">
                    <label for="uname">firstname:</label>
                    <input type="text" class="form-control" id="firstname" placeholder="Enter firstname" name="firstname" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="form-group">
                    <label for="pwd">lastname:</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Enter lastname" name="lastname" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="form-group">
                    <label for="pwd">staff number:</label>
                    <input type="text" class="form-control" id="eKno" placeholder="Enter staff number" name="eKno" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>

                <div class="form-group">
                    <label for="pwd">Select Section:</label>
                    <select id="sectionId" name="sectionId" class="form-control" >
                        {{#each sections}}
                            <option value="{{id}}" class="form-control" required type="text">{{description}}</option>
                        {{/each}}
                    </select>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>


                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember" required> I agree that information is valid
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Check this checkbox to submit.</div>
                    </label>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
